<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SeekBar
    android:id="@+id/seekBarCorner_red"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:theme="@style/MyBarRed"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarCorner_red2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:theme="@style/MyBarRed2"
        app:layout_constraintBottom_toTopOf="@+id/seekBarCorner_red"
        app:layout_constraintEnd_toEndOf="@+id/seekBarCorner_red"
        app:layout_constraintStart_toStartOf="@+id/seekBarCorner_red" />

</androidx.constraintlayout.widget.ConstraintLayout>