<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BrightnessFragment">

    <SeekBar
        android:id="@+id/seekBarCorner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/MyBar"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/seekBarCorner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:theme="@style/MyBar2"
        app:layout_constraintBottom_toTopOf="@+id/seekBarCorner"
        app:layout_constraintEnd_toEndOf="@+id/seekBarCorner"
        app:layout_constraintStart_toStartOf="@+id/seekBarCorner" />


</androidx.constraintlayout.widget.ConstraintLayout>